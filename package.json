{
  "name": "forum",
  "version": "2.0.2",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint .",
    "build": "node esbuild.config.mjs",
    "build:watch": "node --watch-path=./src  --watch-preserve-output esbuild.config.mjs",
    "start": "node --env-file=.env dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch --env-file=.env dist/index.js",
    "dev:esbuild": "pnpm run build:watch",
    "dev": "run-p dev:*",
    "db:generate": "drizzle-kit generate:pg",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "pnpx esbuild ./scripts/db/seed.ts --bundle --platform=node --outfile=dist/seed.js && node --env-file=.env dist/seed.js",
    "db:seed:cleanup": "pnpm run db:seed --cleanup",
    "db:insert:groups": "pnpx esbuild ./scripts/db/insertCustomGroups.ts --bundle --platform=node --format=cjs | node --env-file=.env",
    "test": "jest --runInBand",
    "format": "prettier --check \"src/**/*.{ts,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "^20"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@ngneat/falso": "^7.1.1",
    "@types/bun": "^1.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "csv-parser": "^3.0.0",
    "drizzle-kit": "^0.20.13",
    "esbuild": "^0.19.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.11.3",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@pcd/semaphore-signature-pcd": "^0.9.0",
    "@pcd/util": "^0.3.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "iron-session": "^6.3.1",
    "pg-connection-string": "^2.6.2",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  }
}
